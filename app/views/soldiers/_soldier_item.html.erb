

<div class="soldier-item">

	<div id='soldier_image_<%=soldier.id%>' class='image-container'>
		<div class='overlay'>
		</div>
		<%= image_tag soldier.photo.url(:small), :class => 'soldier-pic' %>
	</div>

	<div class="soldier-detail">
		<div class="soldier-header">
			<div style="float:right">
				<% if @current_user%>
					<%= link_to "(edit)", edit_soldier_path(:id => soldier.id), :class=>'edit-link' %>
					<%= link_to "(delete)", soldier_path(:id => soldier.id), :method => 'delete', :class=>'edit-link' %>
				<% end %>
			</div>
			<div class="soldier-name"><%= soldier.name %></div> 	
		</div>

		<div class='soldier-description'>
		<p><%= soldier.description %></p>
		</div>
	</div>

</div>

